<html>

<head>
  <link rel="stylesheet" href="./bill.css" />
</head>

<body>

  <div class="bill-wrapper" id="my-node">
    <h4 class="bill-logo">fabroMall</h4>
    <div class="bill-title">Payment Bill</div>
    <div class="sum-prd-info-wrapper" id="bill-content">
      <div class="sum-prd-des">
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Name</h4>
          <div class="sum-prd-value">{{username}}</div>
        </div>
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Contact</h4>
          <div class="sum-prd-value">{{contact}}</div>
        </div>
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Product Name</h4>
          <div class="sum-prd-value">{{productname}}</div>
        </div>
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Model Number</h4>
          <div class="sum-prd-value">
            {{model_number}}
          </div>
        </div>
        <div class="divider"></div>
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Order-id</h4>
          <div class="sum-prd-value">
            {{orderid}}
          </div>
        </div>
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Payment-id</h4>
          <div class="sum-prd-value">
            {{paymentid}}
          </div>
        </div>
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Product Price</h4>
          <div class="sum-prd-value">
            <i class="fas fa-rupee-sign"></i>&nbsp;{{discountprice}}.00
          </div>
        </div>

        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Delivery Charge</h4>
          <div class="sum-prd-value">
            <i class="fas fa-rupee-sign"></i>&nbsp;{{deliverycharge}}.00
          </div>
        </div>
        <div class="sum-prd-each-des">
          <h4 class="each-sum-prd-key">Quantity</h4>
          <div class="sum-prd-value">
            {{quantity}}
          </div>
        </div>
        <div class="sum-prd-each-des" id="bill-total">
          <h4 class="each-sum-prd-key">Total</h4>
          <div class="sum-prd-value" id="total">
            <i class="fas fa-rupee-sign"></i>&nbsp;{{discountprice*quantity+deliverycharge}}.00
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
 
  function downloadimg = () => {
    htmlToImage
      .toPng(document.getElementById("my-node"))
      .then(function (dataUrl) {
        download(dataUrl, `fabromall-order_`);
      });
  };
  downloadimg();
  </script>
</body>

</html>